<!doctype html>
<html lang="en">

<head>
    <%- include('globals/head') %>
</head>

<body>

    <%- include('globals/navbar') %>


        <!-- ============================================= CAROUSEL ============================================= -->

        <section class="carousel_main">
            <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">

                    <div class="carousel-item active" data-bs-interval="2000">
                        <img src="panel/img/carousel-1.jpg" class="img-fluid " alt="...">

                        <div class="container">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="carousel_head">
                                        <h1>A Legacy of Educational Excellence</h1>
                                        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Cum quaerat in
                                            omnis
                                            doloribus. Molestiae consectetur repellat, at explicabo qui porro.</p>
                                        <button>Contact us</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="carousel-item" data-bs-interval="10000">
                        <img src="panel/img/carousel-2.jpg" class="img-fluid " alt="...">
                    </div>


                    <div class="carousel-item" data-bs-interval="1000">
                        <img src="panel/img/carousel-3.jpg" class="img-fluid " alt="...">
                    </div>
                    <div class="carousel-item" data-bs-interval="1000">
                        <img src="panel/img/carousel-4.jpg" class="img-fluid " alt="...">
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
            </div>
        </section>

        <!-- ============================================= UNIVERSITIES ============================================= -->

        <section class="universities">
            <div class="uni_heading">
                <h1>Approved Online & Distance education Universities</h1>
            </div>
            <div class="container universities_container">
                <div class="row">
                    <% universities.forEach((university)=> { %>

                        <div class="col-lg-2">
                            <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                <div class="uni_details">
                                    <div class="uni_image">
                                        <img src="panel/img/universities/<%- university.img %>.webp" alt=""
                                            class="img-fluid ">
                                    </div>
                                    <div class="uni_info">
                                        <h6><%- university.courses %></h6>
                                        <p><%- university.name %></p>
                                    </div>
                                </div>
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static"
                                data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="staticBackdropLabel">Registration Form</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="col-lg-12">
                                                <div class="main_form">
                                                    <form action="">
                                                        <div class="row">
                                                            <div class="col-lg-12">
                                                                <div class="input_fields">
                                                                    <label for="text">Enter your
                                                                        name</label>
                                                                    <input type="text" name="name"
                                                                        placeholder="Your name">
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-12">
                                                                <div class="input_fields">
                                                                    <label for="text">Enter your
                                                                        Contact</label>
                                                                    <input type="number" name="name"
                                                                        placeholder="Contact number">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-lg-12">
                                                                <div class="input_fields">
                                                                    <label for="text">Enter your
                                                                        Email</label>
                                                                    <input type="email" name="name"
                                                                        placeholder="Your email">

                                                                </div>
                                                            </div>
                                                            <div class="col-lg-12">
                                                                <div class="input_fields">
                                                                    <label for="text">Enter your
                                                                        Course</label>
                                                                    <input type="text" name="name"
                                                                        placeholder="Course Name">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-lg-12">
                                                                <button>Register</button>
                                                            </div>
                                                        </div>

                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Close</button>
                                            <!-- <button type="button" class="btn btn-primary">Understood</button> -->
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <a href="form">
                                <!-- <div class="uni_details">
                                    <div class="uni_image">
                                        <img src="panel/img/universities/<%- university.img %>.webp" alt=""
                                            class="img-fluid ">
                                    </div>
                                    <div class="uni_info">
                                        <h6><%- university.courses %></h6>
                                        <p><%- university.name %></p>
                                    </div>
                                </div> -->
                            </a>
                        </div>
                        <% }) %>

                </div>
                <div class="row">
                    <div class="view_more">
                        <button class="view_more_btn">
                            VIEW MORE UNIVERSITIES
                        </button>
                    </div>
                </div>
            </div>
        </section>



        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>

        <script>
            $('.owl-carousel').owlCarousel({
                loop: true,
                autoplay: true,
                autoplayTimeout: 3000,
                margin: 10,
                // nav: true,
                responsive: {
                    0: {
                        items: 1
                    },
                    600: {
                        items: 1
                    },
                    1000: {
                        items: 1
                    }
                }
            })
        </script>
</body>

</html>